= render("devise/shared/logo_header", page_title: "Sign in")

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %div
    = f.email_field :email, autofocus: true, placeholder: "Email Address"

  %div
    = f.password_field :password, autocomplete: "off", placeholder: "Password"

  - if devise_mapping.rememberable?
    .hidden-phone
      = f.check_box :remember_me
      = f.label :remember_me

  %div
    = f.submit "Sign in"

#social-login-group
  = link_to("", "", id: "facebook-login", class: "social-login")
  = link_to("", "", id: "twitter-login", class: "social-login")
  = link_to("", "", id: "google-plus-login", class: "social-login")

#account-misc-links
  = render "devise/shared/links"
