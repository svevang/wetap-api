= render("devise/shared/logo_header", title: "Sign up", sub_title: link_to("Or, Sign in", new_session_path(resource_name), class: "path-alternative"))

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  %div
    = f.email_field :email, autofocus: true, placeholder: "Email Address"

  %div
    = f.password_field :password, autocomplete: "off", placeholder: "Password"

  %div
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password"

  %div
  = f.submit "Sign up"

= render "devise/shared/links"
